---
import Header from '../components/Header';

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = "Explora las carteras de inversi√≥n recomendadas por Quaestus Wealth Management para diferentes perfiles de riesgo.", ogImage = "https://ik.imagekit.io/ferminrp/Meta%20Images/enqueinvierto.png" } = Astro.props;

const baseUrl = "https://enqueinvierto.ar";
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="https://emojifavicon.com/üíº" />
    <link rel="canonical" href={`${baseUrl}${currentPath}`} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={baseUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Enqueinvierto - Carteras de Inversi√≥n" />
    <meta property="og:locale" content="es_AR" />
    <meta property="og:site_name" content="Enqueinvierto.ar" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={baseUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />
    <meta property="twitter:creator" content="@quaestusWM" />
    <meta property="twitter:site" content="@quaestusWM" />

    <title>{title}</title>
  </head>
  <body>
    <Header currentPath={currentPath} client:load />
    <slot />
    
